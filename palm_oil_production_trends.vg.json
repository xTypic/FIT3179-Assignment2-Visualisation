{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 280,
  "data": {
    "url": "palm_oil_production_multi_year.csv"
  },
  "params": [
    {
      "name": "state_selection",
      "select": {
        "type": "point",
        "fields": ["state"],
        "on": "click",
        "toggle": false,
        "clear": false
      },
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "filter": {"param": "state_selection"}
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelFontSize": 11}
    },
    "y": {
      "field": "production_tonnes",
      "type": "quantitative",
      "title": "Production (millions of tonnes)",
      "axis": {
        "format": ".1f",
        "labelExpr": "datum.value / 1000000",
        "labelFontSize": 10,
        "titleFontSize": 12
      },
      "scale": {"domain": [0, 5500000]}
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "legend": {
        "labelFontSize": 11,
        "titleFontSize": 12
      }
    },
    "opacity": {
      "condition": {"param": "state_selection", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "production_tonnes", "type": "quantitative", "title": "Production", "format": ","}
    ]
  }
}