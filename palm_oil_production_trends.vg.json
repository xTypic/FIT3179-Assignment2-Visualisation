{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Palm Oil Production Trends by State (2018-2022)",
    "fontSize": 16,
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "palm_oil_production_multi_year.csv"
  },
  "params": [
    {
      "name": "state_selection",
      "select": {
        "type": "point",
        "fields": ["state"],
        "on": "click",
        "toggle": false,
        "clear": false
      },
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "filter": {"param": "state_selection"}
    }
  ],
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "quantitative",
      "title": "Year",
      "axis": {"format": "d"}
    },
    "y": {
      "field": "production_tonnes",
      "type": "quantitative",
      "title": "Production (tonnes)",
      "axis": {
        "format": ",.0f",
        "labelExpr": "datum.value / 1000000"
      },
      "scale": {"domain": [0, 5500000]}
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "State"
    },
    "opacity": {
      "condition": {"param": "state_selection", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "year", "type": "quantitative", "title": "Year"},
      {"field": "production_tonnes", "type": "quantitative", "title": "Production", "format": ","}
    ]
  }
}