{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 280,
  "data": {
    "url": "planted_area_data.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2018, 2019, 2020, 2021, 2022],
        "labels": ["2018", "2019", "2020", "2021", "2022"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.year == year_select"}
  ],
  "mark": {"type": "arc", "innerRadius": 60, "tooltip": true},
  "encoding": {
    "theta": {
      "field": "planted_area_hectares",
      "type": "quantitative",
      "title": "Area (hectares)"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "title": "Region",
      "scale": {
        "range": ["#fbbf24", "#f59e0b", "#d97706"]
      },
      "legend": {
        "orient": "bottom",
        "titleFontSize": 12,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      {"field": "region", "type": "nominal", "title": "Region"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "planted_area_hectares", "type": "quantitative", "title": "Area (hectares)", "format": ","}
    ]
  },
  "view": {"stroke": null}
}