{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Palm Oil Production by Malaysian State (2018-2022)",
    "fontSize": 16,
    "anchor": "start"
  },
  "width": 1100,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [109.5, 4],
    "scale": 3000
  },
  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2018, 2019, 2020, 2021, 2022],
        "labels": ["2018", "2019", "2020", "2021", "2022"],
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "name": "ocean",
      "data": {"sphere": true},
      "mark": {
        "type": "geoshape",
        "fill": "#e6f3ff"
      }
    },
    {
      "name": "graticule",
      "data": {
        "graticule": {"step": [30, 30]}
      },
      "mark": {
        "type": "geoshape", 
        "fill": null,
        "stroke": "#999999",
        "strokeWidth": 1
      }
    },
    {
      "name": "states_base",
      "data": {
        "url": "malaysia_states.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f9f9f9",
        "stroke": "#666666",
        "strokeWidth": 1
      }
    },
    {
      "name": "proportional_symbols",
      "data": {
        "url": "palm_oil_production.csv"
      },
      "transform": [
        {
          "filter": "datum.year == year_select"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7,
        "stroke": "#ffffff",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "production",
          "type": "quantitative",
          "title": "Production (tonnes)",
          "scale": {
            "type": "sqrt",
            "domain": [200000, 5200000],
            "range": [50, 1500]
          },
          "legend": {
            "format": "~s"
          }
        },
        "color": {
          "field": "production",
          "type": "quantitative",
          "title": "Production Level",
          "scale": {
            "scheme": "greens",
            "domain": [200000, 5200000]
          },
          "legend": {
            "format": "~s"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "production", "type": "quantitative", "title": "Production (tonnes)", "format": ","},
          {"field": "longitude", "type": "quantitative", "title": "Longitude", "format": ".4f"},
          {"field": "latitude", "type": "quantitative", "title": "Latitude", "format": ".4f"}
        ]
      }
    }
  ]
}